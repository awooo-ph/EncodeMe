                    VerticalAlignment="Bottom">
            <Button Height="64" Width="64" Style="{StaticResource MaterialDesignFloatingActionButton}"
                    md:ButtonProgressAssist.IsIndeterminate="True"
                    md:ButtonProgressAssist.IsIndicatorVisible="{Binding IsProcessing}"
                    Click="Button_OnClick"
                      HorizontalAlignment="Center"
                      x:Name="Button"
                      VerticalAlignment="Center">
          
                <Button.Background>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <Viewbox>
                                <Grid Height="74" Width="74">
                                <Rectangle Fill="{StaticResource PrimaryHueDarkBrush}"
                                           VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
