<Window x:Class="NORSU.EncodeMe.Requests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NORSU.EncodeMe"
        mc:Ignorable="d"
       Topmost="True"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        DataContext="{Binding Source={x:Static vm:MainViewModel.Instance}}"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        SnapsToDevicePixels="True"
        MouseDown="Requests_OnMouseDown"
        Background="Transparent"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        xmlns:vm="clr-namespace:NORSU.EncodeMe.ViewModels"
        xmlns:converters="clr-namespace:NORSU.EncodeMe.Converters"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:network="clr-namespace:NORSU.EncodeMe.Network">
    <Window.Resources>
        <Storyboard x:Key="HideButton">
            <DoubleAnimation Storyboard.TargetName="Button" Storyboard.TargetProperty="Height"
                             To="20" Duration="0:0:0.05"/>
            <DoubleAnimation Storyboard.TargetName="Button" Storyboard.TargetProperty="Width"
                             To="20" Duration="0:0:0.05" />
        </Storyboard>
        <Storyboard x:Key="ShowButton">
            <DoubleAnimation Storyboard.TargetName="Button" Storyboard.TargetProperty="Height"
                         To="64" Duration="0:0:0.1" />
            <DoubleAnimation Storyboard.TargetName="Button" Storyboard.TargetProperty="Width"
                         To="64" Duration="0:0:0.1" />
        </Storyboard>
    </Window.Resources>

  <Grid Width="333" MaxHeight="555">
    <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <md:ColorZone CornerRadius="0 0 7 7"
                      Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

        <md:Transitioner x:Name="MainTransitioner" SelectedIndex="1"
                                 Grid.Column="1">
          <md:Transitioner.ItemContainerStyle>
            <Style TargetType="{x:Type md:TransitionerSlide}">
              <Setter Property="BackwardWipe">
                <Setter.Value>
                  <md:SlideOutWipe />
                </Setter.Value>
              </Setter>
              <Setter Property="ForwardWipe">
                <Setter.Value>
                  <md:SlideOutWipe />
                </Setter.Value>
              </Setter>
            </Style>
          </md:Transitioner.ItemContainerStyle>
          <!-- Main Menu -->
          <Grid >
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid MouseLeftButtonUp="EncoderPictureClicked"
                  Background="Transparent"
                  Cursor="Hand"
                  Margin="10 0 0 0"
                  x:Name="LoginLamp">

              <md:PackIcon Kind="AccountCircle" Height="32" Width="32"
                           VerticalAlignment="Center" />
              <Border Height="32" Width="32"
                      CornerRadius="147"
                      ClipToBounds="True">
                <Border.OpacityMask>
                  <VisualBrush>
                    <VisualBrush.Visual>
                      <Ellipse Height="7" Width="7" Fill="Red" />
                    </VisualBrush.Visual>
                  </VisualBrush>
                </Border.OpacityMask>
                <Image Source="{Binding Encoder.Picture,Converter={converters:BytesToImage}}"
                       Stretch="UniformToFill"
                       VerticalAlignment="Center"
                       Height="32" Width="32" />
              </Border>
            </Grid>

            <!-- MINI STATS -->
            <!--<StackPanel Orientation="Horizontal"
                                Margin="0 0 20 0"
                                    Visibility="Collapsed"
                            HorizontalAlignment="Right"
                            Grid.Column="0">
                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                    
                            Padding="8 0">
                                <md:Badged Badge="{Binding OnlineEncoderCount}"
                                       Margin="0 7 0 0">

                                    <md:PackIcon Kind="MonitorMultiple"
                                     Height="24"
                                     Width="24"/>

                                </md:Badged>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                Padding="8 0">
                                <md:Badged Badge="{Binding PendingRequestCount}" BadgeColorZoneMode="Accent"
                                       Margin="0 7 0 0">

                                    <md:PackIcon Kind="Bell"
                                             Height="24"
                                             Width="24" />

                                </md:Badged>
                            </Button>


                        </StackPanel>-->

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Column="1">
              <Button Style="{StaticResource MaterialDesignFlatButton}"
                      ToolTip="Register New Student"
                      Padding="4 2">
                <md:PackIcon Kind="AccountPlus" Height="24" Width="24"/>
              </Button>
              <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                Click="Button_OnClick"
                                Margin="5">
                <Path Data="M15.45202,0.29899979L20.934988,0.29899979 23.327017,2.8909988 29.209032,9.1710014 31.601,11.763 31.601,28.709999C31.601,30.504997,30.106005,32,28.312,32L9.6700403,32C7.8760344,32,6.3800021,30.504997,6.3800021,28.709999L6.3800021,24.223999 8.9720422,20.735001 8.9720422,28.611C8.9720422,29.009003,9.2709924,29.307999,9.6700403,29.307999L28.312,29.307999C28.710987,29.307999,29.009998,29.009003,29.009998,28.611L29.009998,12.361 24.025015,12.361C19.739006,12.66,19.639031,8.8720016,19.639031,8.8720016L19.639031,2.9910011 15.351983,2.9910011C15.45202,2.7910004,15.45202,2.4920006,15.45202,2.2929993L15.45202,0.89699936z M9.6700403,0L9.7700149,0 12.56103,0C13.059015,0,13.558039,0.39899826,13.558039,0.89699936L13.558039,2.2929993C13.558039,2.7910004,13.158991,3.1899986,12.56103,3.1899986L10.666988,3.1899986C9.8690139,3.1899986 8.3740197,3.5890007 7.9750329,5.980999 7.5770232,8.0750008 7.9750329,14.454998 7.9750329,14.454998L11.364986,14.454998 5.7820407,21.533001 0,14.454998 3.5889877,14.454998 3.7880229,5.980999C3.7880231,5.980999,3.4890121,0.79700089,9.6700403,0z"
                                  Stretch="Uniform" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},Path=Foreground}" Width="20" Height="20" Margin="0,0,0,0"
                                  RenderTransformOrigin="0.5,0.5">
                  <Path.RenderTransform>
                    <TransformGroup>
                      <TransformGroup.Children>
                        <RotateTransform Angle="0" />
                        <ScaleTransform ScaleX="1" ScaleY="1" />
                      </TransformGroup.Children>
                    </TransformGroup>
                  </Path.RenderTransform>
                </Path>
              </Button>
            </StackPanel>
          </Grid>

          <!--Login toolbar-->
          <UniformGrid Columns="1" HorizontalAlignment="Right"
                                 Grid.Column="1">
            
            <Button Content="LOGIN"
                    IsEnabled="False"
                                x:Name="LoginButton"
                                Click="LoginClicked"
                                VerticalAlignment="Bottom"
                                Margin="5 10 10 10" />
          </UniformGrid>

          <!--Encoder Toolbar-->
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left">
             
            <Button x:Name="LogoutButton"
                    Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalAlignment="Left"
                            Click="LogoutButton_OnClick"
                    Height="Auto"
                    VerticalAlignment="Stretch">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="LOGOUT"
                                       VerticalAlignment="Center"/>
              </StackPanel>
            </Button>
              <Button Style="{StaticResource MaterialDesignFlatButton}"
                      Click="Enroll_Click"
                      Height="Auto"
                      VerticalAlignment="Stretch"
                      Content="ENROLL" />
            </StackPanel>
            
              <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    Grid.Column="1"
                                Click="Button_OnClick"
                    HorizontalAlignment="Right"
                      Height="32" Width="32"
                                Margin="7">
                <Path Data="M15.45202,0.29899979L20.934988,0.29899979 23.327017,2.8909988 29.209032,9.1710014 31.601,11.763 31.601,28.709999C31.601,30.504997,30.106005,32,28.312,32L9.6700403,32C7.8760344,32,6.3800021,30.504997,6.3800021,28.709999L6.3800021,24.223999 8.9720422,20.735001 8.9720422,28.611C8.9720422,29.009003,9.2709924,29.307999,9.6700403,29.307999L28.312,29.307999C28.710987,29.307999,29.009998,29.009003,29.009998,28.611L29.009998,12.361 24.025015,12.361C19.739006,12.66,19.639031,8.8720016,19.639031,8.8720016L19.639031,2.9910011 15.351983,2.9910011C15.45202,2.7910004,15.45202,2.4920006,15.45202,2.2929993L15.45202,0.89699936z M9.6700403,0L9.7700149,0 12.56103,0C13.059015,0,13.558039,0.39899826,13.558039,0.89699936L13.558039,2.2929993C13.558039,2.7910004,13.158991,3.1899986,12.56103,3.1899986L10.666988,3.1899986C9.8690139,3.1899986 8.3740197,3.5890007 7.9750329,5.980999 7.5770232,8.0750008 7.9750329,14.454998 7.9750329,14.454998L11.364986,14.454998 5.7820407,21.533001 0,14.454998 3.5889877,14.454998 3.7880229,5.980999C3.7880231,5.980999,3.4890121,0.79700089,9.6700403,0z"
                                  Stretch="Uniform" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},Path=Foreground}" Width="16" Height="16" Margin="0,0,0,0"
                                  RenderTransformOrigin="0.5,0.5">
                  <Path.RenderTransform>
                    <TransformGroup>
                      <TransformGroup.Children>
                        <RotateTransform Angle="0" />
                        <ScaleTransform ScaleX="1" ScaleY="1" />
                      </TransformGroup.Children>
                    </TransformGroup>
                  </Path.RenderTransform>
                </Path>
              </Button>
          </Grid>

          <!--Work toolbar-->
          <Grid Margin="10 0" x:Name="WorkToolbar"
                Visibility="{Binding ElementName=ListBoxItem1,Path=IsSelected,Converter={converters:BooleanToVisibility Hidden,Visible}}">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                        Visibility="{Binding IsSubjectsTabSelected, Converter={converters:BooleanToVisibility}}"
                                    VerticalAlignment="Center">
              <Button Style="{StaticResource MaterialDesignToolButton}"
                                    Click="AcceptSelected"
                                    Padding="5 0">
                <StackPanel VerticalAlignment="Center">
                  <md:PackIcon Kind="CheckCircle"
                                             Height="24"
                                             Width="24"
                                             HorizontalAlignment="Center"
                                             Foreground="{StaticResource PrimaryHueDarkBrush}" />
                  <TextBlock Text="Accept" FontSize="6pt" />
                </StackPanel>
              </Button>
              <Button Padding="5 0"
                                    Click="CloseScheduleClicked"
                                    Style="{StaticResource MaterialDesignToolButton}">
                <StackPanel VerticalAlignment="Center">
                  <md:PackIcon Kind="CloseCircle" Height="24"
                                             Width="24"
                                             HorizontalAlignment="Center"
                                             Foreground="{StaticResource SecondaryAccentBrush}" />
                  <TextBlock Text="Closed" FontSize="6pt" />
                </StackPanel>
              </Button>
              <Button Style="{StaticResource MaterialDesignToolButton}" Padding="5 0"
                                    Click="ConflictScheduleClicked">
                <StackPanel VerticalAlignment="Center">
                  <md:PackIcon Kind="AlertCircle" Height="24"
                                             Width="24"
                                             HorizontalAlignment="Center" />
                  <TextBlock Text="Conflict" FontSize="6pt" />
                </StackPanel>
              </Button>
            </StackPanel>

            <Button Click="SubmitButton_OnClick"
                                x:Name="SubmitButton"
                                Grid.Column="1"
                                Content="SUBMIT"
                                VerticalAlignment="Center" />
          </Grid>

          <!-- Message -->
          <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
              <md:PackIcon Kind="Alert" Height="24" Width="24" Margin="10 0" VerticalAlignment="Center"/>
            <TextBlock Text="" x:Name="Message" TextWrapping="Wrap" FontSize="11pt" VerticalAlignment="Center"
                       Grid.Column="1"/>
          </Grid>
          
          <!-- Enrollment -->
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Content="CANCEL" Style="{StaticResource MaterialDesignFlatButton}"
                    Click="CancelEnrollment_Click"
                    Margin="10"/>
            <Button Grid.Column="2" Content="SUBMIT"
                    Command="{Binding Source={x:Static vm:EnrollmentViewModel.Instance},Path=EnrollCommand}"
                    Margin="10"/>
          </Grid>
          
        </md:Transitioner>

      </Grid>
        </md:ColorZone>


    <md:Transitioner Grid.Row="0" x:Name="Content" SelectedIndex="0"
                     VerticalAlignment="Bottom">
      <md:Transitioner.ItemContainerStyle>
        <Style TargetType="{x:Type md:TransitionerSlide}">
          <Setter Property="BackwardWipe">
            <Setter.Value>
              <md:SlideOutWipe/>
            </Setter.Value>
          </Setter>
          <Setter Property="ForwardWipe">
            <Setter.Value>
              <md:SlideOutWipe/>
            </Setter.Value>
          </Setter>
        </Style>
      </md:Transitioner.ItemContainerStyle>
      <!-- LOGIN VIEW -->
      <Border   x:Name="Genie"
                Grid.Row="0"
                BorderBrush="{StaticResource MaterialDesignDivider}"
                VerticalAlignment="Bottom"
                Margin="0 0 0 0">
        <Grid >
          <Grid x:Name="LoginView">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="*"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            
            <Border CornerRadius="4 4 0 0"
                                Background="{StaticResource PrimaryHueDarkBrush}">
              <StackPanel VerticalAlignment="Top"
                          Orientation="Horizontal"
                          HorizontalAlignment="Left">
                <Image Source="norsu_74.png"
                        Margin="7"
                        Height="48" Width="48"/>
                <TextBlock Text="Please Login" 
                            Foreground="White"
                            VerticalAlignment="Center"
                            Margin="10 0 0 0"
                            TextAlignment="Center"
                            Style="{StaticResource MaterialDesignTitleTextBlock}"/>
              </StackPanel>
            </Border>

            <StackPanel Grid.Row="0" HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="2"
                        Orientation="Horizontal">
              <Button Style="{StaticResource MaterialDesignFlatButton}"
                      Height="Auto"
                      Width="Auto"
                      Padding="4 2"
                      Click="Minimize_Clicked"
                      Content="{md:PackIcon WindowMinimize}" />
              <Button Style="{StaticResource MaterialDesignFlatButton}"
                      Height="Auto"
                      Click="ButtonBase_OnClick"
                      Width="Auto"
                      Padding="4 2"
                      Content="{md:PackIcon WindowClose}" />
            </StackPanel>
            
            <StackPanel Background="White"
                                    Grid.Row="1">
              <ProgressBar x:Name="LoginProgress"
                                     IsIndeterminate="False"/>
              <TextBox Margin="20"
                                     x:Name="Username"
                                     TextChanged="Username_OnTextChanged"
                                     md:HintAssist.Hint="USERNAME"/>
              <PasswordBox
                                PasswordChanged="Password_OnPasswordChanged"
                                Margin="20"
                                x:Name="Password"
                                md:HintAssist.Hint="PASSWORD" />
            </StackPanel>
          </Grid>
        </Grid>
      </Border>

      <!-- ENCODER INFO VIEW -->
      <md:ColorZone 
                VerticalAlignment="Bottom"
                x:Name="EncoderGenie"
                Grid.Row="0"
                BorderBrush="{StaticResource MaterialDesignDivider}"
                CornerRadius="4 4 0 0"
                Mode="PrimaryDark"
                Margin="0 0 0 0">
        <Grid >
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          <StackPanel Orientation="Horizontal">
            <Border Height="48" Width="48"
                    Margin="20 10 10 10">
              <Border.OpacityMask>
                <VisualBrush>
                  <VisualBrush.Visual>
                    <Ellipse Height="7" Width="7" Fill="Red"/>
                  </VisualBrush.Visual>
                </VisualBrush>
              </Border.OpacityMask>
              <Image Source="{Binding Encoder.Picture,Converter={converters:BytesToImage}}"
                   Height="48" Width="48"
                   Stretch="UniformToFill"/>
            </Border>
            <StackPanel VerticalAlignment="Center"
                            Margin="10">
              <TextBlock Text="{Binding Encoder.Username}" Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                               />
              <TextBlock Text="{Binding Encoder.FullName}" Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                               />
            </StackPanel>
          </StackPanel>

          <StackPanel Grid.Row="0" HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="2"
                      Orientation="Horizontal">
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Height="Auto"
                    Width="Auto"
                    Padding="4 2"
                    Click="Minimize_Clicked"
                    Content="{md:PackIcon WindowMinimize}" />
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Height="Auto"
                    Click="ButtonBase_OnClick"
                    Width="Auto"
                    Padding="4 2"
                    Content="{md:PackIcon WindowClose}" />
          </StackPanel>
          
          <StackPanel Grid.Row="1" Margin="5">
            <md:ColorZone Margin="5" ToolTip="Number of students processed.">
              <StackPanel Orientation="Horizontal">
                <md:PackIcon Kind="AccountMultipleOutline"
                                     VerticalAlignment="Center"
                                         HorizontalAlignment="Center"
                                     Height="32" Width="32"
                                     Margin="5" />
                <Rectangle Width="1" Fill="{StaticResource MaterialDesignDivider}"/>
                <TextBlock Text="{Binding Encoder.WorkCount,StringFormat={}#\,##0}" FontSize="20pt" HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                       Margin="10 0"
                               FontWeight="Bold"/>

              </StackPanel>
            </md:ColorZone>
            <md:ColorZone Margin="5" ToolTip="Average Time">
              <StackPanel Orientation="Horizontal">
                <Path
                  Data="M15.966002,3.9950132C16.518002,3.995013,16.966002,4.4430118,16.966002,4.9950104L16.966002,13.693594 16.973238,13.696447C17.870567,14.0759 18.500004,14.964275 18.500004,16.000025 18.500004,17.381025 17.381004,18.500025 16.000004,18.500025 14.619004,18.500025 13.500004,17.381025 13.500004,16.000025 13.500004,15.007431 14.078081,14.150187 14.916025,13.746503L14.966002,13.723913 14.966002,4.9950104C14.966002,4.4430118,15.414002,3.995013,15.966002,3.9950132z M16,0C24.821991,0 32,7.1780396 32,16 32,16.55304 31.552002,17 31,17 30.447998,17 30,16.55304 30,16 30,8.2800293 23.720001,2 16,2 8.2799988,2 2,8.2800293 2,16 2,16.55304 1.552002,17 1,17 0.44799805,17 0,16.55304 0,16 0,7.1780396 7.1779938,0 16,0z"
                  Stretch="Uniform" Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type md:ColorZone}},Path=Foreground}" Width="32" Height="32"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Margin="5"
                  RenderTransformOrigin="0.5,0.5">
                  <Path.RenderTransform>
                    <TransformGroup>
                      <TransformGroup.Children>
                        <RotateTransform Angle="0" />
                        <ScaleTransform ScaleX="1" ScaleY="1" />
                      </TransformGroup.Children>
                    </TransformGroup>
                  </Path.RenderTransform>
                </Path>
                <Rectangle Width="1" Fill="{StaticResource MaterialDesignDivider}" />
                <TextBlock FontSize="20pt" HorizontalAlignment="Right"
                           Margin="10 0"
                           Text="{Binding Encoder.AverageTime}"
                           VerticalAlignment="Center"
                           FontWeight="Bold" />

              </StackPanel>
            </md:ColorZone>
            <md:ColorZone Margin="5" ToolTip="Best Time" >
              <StackPanel Orientation="Horizontal">
                <Path
                  Data="M23.545831,7.4770546C23.801568,7.4770546 24.057305,7.5748019 24.252795,7.7702961 24.643775,8.1612844 24.643775,8.7932653 24.252795,9.1842532L18.315986,15.121184 18.348353,15.203293C18.446475,15.471344 18.500022,15.760906 18.500022,16.06301 18.500022,17.443991 17.381003,18.563009 16.000022,18.563009 14.61904,18.563009 13.500022,17.443991 13.500022,16.06301 13.500022,14.681967 14.61904,13.563009 16.000022,13.563009 16.302112,13.563009 16.591666,13.616553 16.859714,13.714672L16.884746,13.724539 22.838866,7.7702961C23.034356,7.5748019,23.290093,7.4770546,23.545831,7.4770546z M16,0C24.822001,0 32.000001,7.178 32.000001,16 32.000001,16.553 31.553,17 31.000001,17 30.447,17 30.000001,16.553 30.000001,16 30.000001,8.2799997 23.72,2 16,2 8.2800007,2 2,8.2799997 2,16 2,16.553 1.5530005,17 1,17 0.4470005,17 0,16.553 0,16 0,7.178 7.1780005,0 16,0z"
                  Stretch="Uniform"
                  Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type md:ColorZone}},Path=Foreground}"
                  Width="32" Height="32"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Margin="5">
                  <Path.RenderTransform>
                    <TransformGroup>
                      <TransformGroup.Children>
                        <RotateTransform Angle="0" />
                        <ScaleTransform ScaleX="1" ScaleY="1" />
                      </TransformGroup.Children>
                    </TransformGroup>
                  </Path.RenderTransform>
                </Path>
                <Rectangle Width="1" Fill="{StaticResource MaterialDesignDivider}" />
                <TextBlock FontSize="20pt" HorizontalAlignment="Right"
                                       Margin="10 0"
                           Text="{Binding Encoder.BestTime}"
                                       VerticalAlignment="Center"
                               FontWeight="Bold"/>

              </StackPanel>
            </md:ColorZone>
          </StackPanel>

        </Grid>
      </md:ColorZone>

      <!-- WORK VIEW -->
      <Border   Background="White"
                BorderThickness="0 0 0 1"
                BorderBrush="{StaticResource PrimaryHueDarkBrush}"
                CornerRadius="4 4 0 0"
                  Margin="0 0 0 0">

        <Grid >
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          <Border CornerRadius="4 4 0 0"
                                Background="{StaticResource PrimaryHueDarkBrush}">
            <StackPanel VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left">

              <Grid>
                <Image Source="norsu_74.png"
                       x:Name="NorsuLogo"
                       Margin="7"
                       Height="48" Width="48" />
              <Image Visibility="Collapsed"
                     x:Name="StudentPicture"
                                   Margin="7"
                                   Height="48" Width="48"/>
              </Grid>

              <StackPanel VerticalAlignment="Center">
                <TextBlock Text="STUDENT ID" 
                                       x:Name="StudentId"
                                           Foreground="White"
                                           Style="{StaticResource MaterialDesignTitleTextBlock}"/>
                <TextBlock Text="Student Name"
                                       x:Name="StudentName"
                                       Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                                       Foreground="White"/>
              </StackPanel>
            </StackPanel>
          </Border>

          <StackPanel Grid.Row="0" HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="2"
                      Orientation="Horizontal">
          <Button Style="{StaticResource MaterialDesignFlatButton}"
                  Height="Auto"
                  Width="Auto"
                  Padding="4 2"
                  Click="Minimize_Clicked"
                  Content="{md:PackIcon WindowMinimize}"/>
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Height="Auto"
                    Click="ButtonBase_OnClick"
                    Width="Auto"
                    Padding="4 2"
                    Content="{md:PackIcon WindowClose}" />
          </StackPanel>

          <ListBox Grid.Row="1" x:Name="ListBox"
                   SelectedIndex="{Binding SelectedWorkTab}"
                   HorizontalContentAlignment="Center">
            <ListBox.ItemContainerStyle>
              <Style BasedOn="{StaticResource MaterialDesignListBoxItem}"
                     TargetType="ListBoxItem">
                <Setter Property="BorderThickness" Value="0 0 0 2"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Style.Triggers>
                  <Trigger Property="IsSelected" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryHueDarkBrush}"/>
                  </Trigger>
                </Style.Triggers>
              </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemsPanel>
              <ItemsPanelTemplate>
                <UniformGrid Rows="1"/>
              </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBoxItem>
              <TextBlock Text="INFO" VerticalAlignment="Center" Margin="4" 
                         FontSize="14pt"
                         TextAlignment="Center"/>
            </ListBoxItem>
            <ListBoxItem>
              <TextBlock Text="RECEIPTS" VerticalAlignment="Center" Margin="4"
                         FontSize="14pt"
                         TextAlignment="Center" />
            </ListBoxItem>
            <ListBoxItem >
              <TextBlock Text="SUBJECTS" VerticalAlignment="Center" Margin="4"
                         FontSize="14pt"
                         TextAlignment="Center" />
            </ListBoxItem>
          </ListBox>

          <md:Transitioner Grid.Row="2" SelectedIndex="{Binding ElementName=ListBox,Path=SelectedIndex}">

            <ScrollViewer Background="White"
                          x:Name="Student"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto"
                          d:DataContext="{d:DesignInstance network:Student}">
              <StackPanel Background="White" Margin="20">
                <TextBlock Text="First Name" />
                <TextBlock Text="{Binding FirstName}"
                           Style="{StaticResource MaterialDesignTitleTextBlock}"
                           Margin="0 0 0 7" />
                <TextBlock Text="Middle Name" />
                <TextBlock Text="{Binding MiddleName}"
                           Style="{StaticResource MaterialDesignTitleTextBlock}"
                           Margin="0 0 0 7" />
                <TextBlock Text="Last Name" />
                <TextBlock Text="{Binding LastName}"
                           Style="{StaticResource MaterialDesignTitleTextBlock}"
                           Margin="0 0 0 7" />

                <TextBlock Text="Date of Birth"/>
                <TextBlock Text="{Binding BirthDate,StringFormat=MMMM\ d\, yyyy}"
                             Style="{StaticResource MaterialDesignTitleTextBlock}"
                             Margin="0 0 0 7"/>

                <TextBlock Text="Gender" />
                <TextBlock Text="Male"
                             Visibility="{Binding Male,Converter={converters:BooleanToVisibility}}"
                             Style="{StaticResource MaterialDesignTitleTextBlock}"
                             Margin="0 0 0 7" />
                <TextBlock Text="Female"
                             Visibility="{Binding Male,Converter={converters:BooleanToVisibility Collapsed,Visible}}"
                             Style="{StaticResource MaterialDesignTitleTextBlock}"
                             Margin="0 0 0 7" />

                <TextBlock Text="Address" />
                <TextBlock Text="{Binding Address}" TextWrapping="Wrap"
                           Margin="0 0 0 7" 
                           Style="{StaticResource MaterialDesignTitleTextBlock}"/>

                <TextBlock Text="Course" />
                <TextBlock Text="{Binding Course}" TextWrapping="Wrap"
                             Margin="0 0 0 7"
                             Style="{StaticResource MaterialDesignTitleTextBlock}" />

                <TextBlock Text="Year Level" />
                <TextBlock Text="{Binding YearLevel,Converter={converters:YearLevelConverter}}" 
                           Margin="0 0 0 7"
                           Style="{StaticResource MaterialDesignTitleTextBlock}" />

                <TextBlock Text="Status" />
                <TextBlock Text="{Binding Status,Converter={converters:StudentStatusConverter}}"
                           Style="{StaticResource MaterialDesignTitleTextBlock}"
                           Margin="0 0 0 7" />

                <TextBlock Text="Major" />
                <TextBlock Text="{Binding Major}" TextWrapping="Wrap"
                             Margin="0 0 0 7"
                             Style="{StaticResource MaterialDesignTitleTextBlock}" />

                <TextBlock Text="Minor" />
                <TextBlock Text="{Binding Minor}" TextWrapping="Wrap"
                             Margin="0 0 0 7"
                             Style="{StaticResource MaterialDesignTitleTextBlock}" />

                <TextBlock Text="Scholarship" />
                <TextBlock Text="{Binding Scholarship}"
                             Style="{StaticResource MaterialDesignTitleTextBlock}" />

              </StackPanel>
            </ScrollViewer>

            <ListBox x:Name="ReceiptsListBox"
                     HorizontalContentAlignment="Stretch">
              <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type network:Receipt}">
                  <StackPanel Margin="10">
                    <TextBlock Text="{Binding Number}" FontSize="14pt" FontWeight="Bold"/>
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                      </Grid.ColumnDefinitions>
                      <TextBlock Text="{Binding DatePaid,StringFormat={}MMM\ d\,\ yyyy}"
                                 FontSize="12pt"/>
                      <TextBlock Text="{Binding Amount,StringFormat={}#\,##.00}"
                                 Grid.Column="1"
                                 TextAlignment="Right"
                                 FontSize="12pt"/>
                    </Grid>
                  </StackPanel>
                </DataTemplate>
              </ListBox.ItemTemplate>
            </ListBox>

            <ListBox Grid.IsSharedSizeScope="True"
                         SelectionMode="Extended"
                         HorizontalContentAlignment="Stretch"
                          x:Name="WorkDataGrid">
              <ListBox.ItemContainerStyle>
                <Style BasedOn="{StaticResource MaterialDesignListBoxItem}"
                               TargetType="ListBoxItem">
                  <Setter Property="IsSelected" Value="{Binding IsSelected,Mode=TwoWay}"/>
                </Style>
              </ListBox.ItemContainerStyle>
              <ListBox.ItemTemplate>
                <DataTemplate>
                  <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto"/>
                      <ColumnDefinition Width="*"/>
                      <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox IsChecked="{Binding IsSelected}"
                                          VerticalAlignment="Center"
                                          Margin="5"/>
                    <TextBlock Grid.Column="1"
                                           VerticalAlignment="Center"
                                           Margin="5">
                                    <Run FontWeight="Bold" Text="{Binding SubjectCode}" />
                                    [ <Run Text="{Binding Schedule}" /> ]
                    </TextBlock>
                    <Button Grid.Column="2"
                                        Padding="0"
                                        Style="{StaticResource MaterialDesignToolButton}"
                                        Command="{Binding ToggleStatusCommand}">
                      <md:PackIcon Height="24"
                                             Width="24"
                                             Margin="5 0"
                                             Foreground="{Binding EnrollmentStatus, Converter={converters:ScheduleStatusToBrushConverter
                                                {StaticResource PrimaryHueDarkBrush}, 
                                                {StaticResource SecondaryAccentBrush}, 
                                                {StaticResource MaterialDesignLightForeground}}}"
                                             Kind="{Binding EnrollmentStatus, Converter={converters:ScheduleStatusConverter}}" />
                    </Button>
                  </Grid>
                </DataTemplate>
              </ListBox.ItemTemplate>
            </ListBox>
          </md:Transitioner>

          <ProgressBar x:Name="SubmitProgress" Grid.Row="1"
                       Grid.RowSpan="2"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             IsIndeterminate="True"
                             Visibility="Collapsed"
                             Height="64"
                             Width="64"
                             Style="{StaticResource MaterialDesignCircularProgressBar}"/>

          <md:PackIcon Kind="CheckCircle"
                       Grid.Row="1"
                       x:Name="SubmitResult"
                       Grid.RowSpan="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Visibility="Collapsed"
                       Height="64"
                       Width="64" />
        </Grid>
      </Border>

      <!--ENROLLMENT-->
      <Grid DataContext="{Binding Source={x:Static vm:EnrollmentViewModel.Instance}}">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <Border CornerRadius="4 4 0 0"
                    Background="{StaticResource PrimaryHueDarkBrush}">
            <Grid VerticalAlignment="Top"
                          HorizontalAlignment="Left">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <Image Source="norsu_74.png"
                       Margin="7"
                       Height="48" Width="48" />
              <TextBlock Text="Enroll Student"
                           Grid.Column="1"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="10 0 0 0"
                           TextAlignment="Center"
                           Style="{StaticResource MaterialDesignTitleTextBlock}" />
            </Grid>
          </Border>

          <StackPanel Grid.Row="0" HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="2"
                      Orientation="Horizontal">
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Height="Auto"
                    Width="Auto"
                    Padding="4 2"
                    Click="Minimize_Clicked"
                    Content="{md:PackIcon WindowMinimize}" />
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Height="Auto"
                    Click="ButtonBase_OnClick"
                    Width="Auto"
                    Padding="4 2"
                    Content="{md:PackIcon WindowClose}" />
          </StackPanel>
          
          <ScrollViewer Background="White"
                        IsEnabled="{Binding IsProcessing,Converter={converters:Inverter}}"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Auto"
                          Grid.Row="1">
            <StackPanel Background="White" Margin="10"
                        DataContext="{Binding Student}"
                        Grid.Row="1">
              <TextBox md:HintAssist.Hint="STUDENT ID" 
                       Margin="4"
                       Text="{Binding StudentId,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"
                       md:HintAssist.IsFloating="True"/>
              <TextBox md:HintAssist.Hint="FIRST NAME"
                     Margin="4"
                     Text="{Binding FirstName,UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                     md:HintAssist.IsFloating="True" />
              <TextBox md:HintAssist.Hint="MIDDLE NAME"
                       Margin="4"
                       Text="{Binding MiddleName,UpdateSourceTrigger=PropertyChanged}"
                       md:HintAssist.IsFloating="True" />
              <TextBox md:HintAssist.Hint="LAST NAME"
                       Margin="4"
                       Text="{Binding LastName,UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                       md:HintAssist.IsFloating="True" />
              <DatePicker Margin="4 20 4 4"
                          DisplayDateStart="{Binding Source={x:Static vm:EnrollmentViewModel.MinDate},Mode=OneWay}"
                          DisplayDateEnd="{Binding Source={x:Static system:DateTime.Now},Mode=OneWay}"
                          SelectedDate="{Binding BirthDate,UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                          md:HintAssist.IsFloating="True" >
                <md:HintAssist.Hint>
                  <TextBlock>
                    <Run Text="Date of Birth (AGE: "/><Run Text="{Binding BirthDate,Converter={converters:BirthToAge}}"/><Run Text=")"/>
                  </TextBlock>
                </md:HintAssist.Hint>
              </DatePicker>
              <ComboBox md:HintAssist.Hint="GENDER"
                        Margin="4"
                        md:HintAssist.IsFloating="True" >
                <ComboBoxItem Content="Male" IsSelected="{Binding Male}"/>
                <ComboBoxItem Content="Female" IsSelected="{Binding Male,Converter={converters:Inverter}}"/>
              </ComboBox>
              <TextBox md:HintAssist.Hint="ADDRESS"
                       Margin="4"
                       Text="{Binding Address,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"
                       md:HintAssist.IsFloating="True" />
              <Grid>
                <ComboBox ItemsSource="{Binding Source={x:Static vm:EnrollmentViewModel.Instance},Path=Courses}"
                        IsEnabled="{Binding Source={x:Static vm:EnrollmentViewModel.Instance},Path=CoursesDownloaded}"
                        Margin="4"
                        md:HintAssist.Hint="COURSE"
                        md:HintAssist.IsFloating="True"
                        DisplayMemberPath="Fullname"
                        SelectedValuePath="Id" SelectedValue="{Binding CourseId,ValidatesOnDataErrors=True}"/>
                <StackPanel Orientation="Horizontal"
                            Visibility="{Binding Source={x:Static vm:EnrollmentViewModel.Instance},Path=CoursesDownloaded,Converter={converters:BooleanToVisibility Collapsed,Visible}}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                  <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                               IsIndeterminate="True"/>
                  <TextBlock Text=" Loading..."/>
                </StackPanel>
              </Grid>

              <ComboBox Margin="4"
                        md:HintAssist.Hint="YEAR LEVEL"
                        md:HintAssist.IsFloating="True"
                        SelectedIndex="{Binding YearLevel}" >
                <ComboBoxItem Content="First Year"/>
                <ComboBoxItem Content="Second Year" />
                <ComboBoxItem Content="Third Year" />
                <ComboBoxItem Content="Fourth Year" />
                <ComboBoxItem Content="Fifth Year" />
              </ComboBox>

              <TextBox md:HintAssist.Hint="MAJOR"
                       Margin="4"
                       Text="{Binding Major,UpdateSourceTrigger=PropertyChanged}"
                       md:HintAssist.IsFloating="True" />
              <TextBox md:HintAssist.Hint="MINOR"
                       Margin="4"
                       Text="{Binding Minor,UpdateSourceTrigger=PropertyChanged}"
                       md:HintAssist.IsFloating="True" />
              <TextBox md:HintAssist.Hint="SCHOLARSHIP"
                       Margin="4"
                       Text="{Binding Scholarship,UpdateSourceTrigger=PropertyChanged}"
                       md:HintAssist.IsFloating="True" />

              <ComboBox md:HintAssist.Hint="STATUS"
                        Margin="4"
                        SelectedIndex="{Binding Status}"
                        md:HintAssist.IsFloating="True">
                <ComboBoxItem Content="Ongoing" />
                <ComboBoxItem Content="Returnee" />
                <ComboBoxItem Content="Shiftee" />
                <ComboBoxItem Content="Transferee" />
              </ComboBox>
            </StackPanel>
          </ScrollViewer>
          <Grid Grid.Row="1"
                  Visibility="{Binding IsProcessing,Converter={converters:BooleanToVisibility}}">
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center"
                  Visibility="{Binding EnrollmentSuccess,Converter={converters:BooleanToVisibility Collapsed,Visible}}">
              <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Height="147" Width="147"
                           Visibility="{Binding EnrollmentError,Converter={converters:BooleanToVisibility Collapsed,Visible}}"
                           IsIndeterminate="True"/>
            </Grid>
            <md:PackIcon Kind="CheckCircle" Height="147" Width="147" Foreground="{StaticResource PrimaryHueDarkBrush}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding EnrollmentSuccess,Converter={converters:BooleanToVisibility}}"/>
            <StackPanel Background="#77ffffff"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Visibility="{Binding EnrollmentError,Converter={converters:BooleanToVisibility}}">
              <md:PackIcon Kind="CloseCircle" Height="147" Width="147"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="{StaticResource ValidationErrorBrush}"/>
              <TextBlock Text="{Binding Status}" TextAlignment="Center" TextWrapping="Wrap"
                         FontSize="11pt"/>
            </StackPanel>
          </Grid>
        </Grid>
      </Grid>
    </md:Transitioner>


  </Grid>
  
</Window>