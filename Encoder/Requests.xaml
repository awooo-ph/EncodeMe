<Window x:Class="NORSU.EncodeMe.Requests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NORSU.EncodeMe"
        mc:Ignorable="d"
       Topmost="True"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        DataContext="{Binding Source={x:Static vm:MainViewModel.Instance}}"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        SnapsToDevicePixels="True"
        MouseDown="Requests_OnMouseDown"
        Background="Transparent"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        xmlns:vm="clr-namespace:NORSU.EncodeMe.ViewModels"
        xmlns:converters="clr-namespace:NORSU.EncodeMe.Converters">
    <Window.Resources>
        <Storyboard x:Key="HideButton">
            <DoubleAnimation Storyboard.TargetName="Button" Storyboard.TargetProperty="Height"
                             To="20" Duration="0:0:0.05"/>
            <DoubleAnimation Storyboard.TargetName="Button" Storyboard.TargetProperty="Width"
                             To="20" Duration="0:0:0.05" />
        </Storyboard>
        <Storyboard x:Key="ShowButton">
            <DoubleAnimation Storyboard.TargetName="Button" Storyboard.TargetProperty="Height"
                         To="64" Duration="0:0:0.1" />
            <DoubleAnimation Storyboard.TargetName="Button" Storyboard.TargetProperty="Width"
                         To="64" Duration="0:0:0.1" />
        </Storyboard>
    </Window.Resources>

    <Grid Width="250">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Rectangle Height="20" Width="20"
                       x:Name="Lamp"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Right"
                       Margin="0 0 20 20"/>

        <md:ColorZone Mode="Light" CornerRadius="0 0 7 7"
                      Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

        <md:Transitioner x:Name="MainTransitioner" SelectedIndex="1"
                                 Grid.Column="1">
          <!-- Main Menu -->
          <Grid >
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid MouseLeftButtonUp="EncoderPictureClicked"
                  Background="Transparent"
                  Cursor="Hand"
                  Margin="10 0 0 0"
                  x:Name="LoginLamp">

              <md:PackIcon Kind="AccountCircle" Height="32" Width="32"
                           VerticalAlignment="Center" />
              <Border Height="32" Width="32"
                      CornerRadius="147"
                      ClipToBounds="True">
                <Border.OpacityMask>
                  <VisualBrush>
                    <VisualBrush.Visual>
                      <Ellipse Height="7" Width="7" Fill="Red" />
                    </VisualBrush.Visual>
                  </VisualBrush>
                </Border.OpacityMask>
                <Image Source="{Binding Encoder.Picture,Converter={converters:BytesToImage}}"
                       Stretch="UniformToFill"
                       VerticalAlignment="Center"
                       Height="32" Width="32" />
              </Border>
            </Grid>

            <!-- MINI STATS -->
            <!--<StackPanel Orientation="Horizontal"
                                Margin="0 0 20 0"
                                    Visibility="Collapsed"
                            HorizontalAlignment="Right"
                            Grid.Column="0">
                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                    
                            Padding="8 0">
                                <md:Badged Badge="{Binding OnlineEncoderCount}"
                                       Margin="0 7 0 0">

                                    <md:PackIcon Kind="MonitorMultiple"
                                     Height="24"
                                     Width="24"/>

                                </md:Badged>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                Padding="8 0">
                                <md:Badged Badge="{Binding PendingRequestCount}" BadgeColorZoneMode="Accent"
                                       Margin="0 7 0 0">

                                    <md:PackIcon Kind="Bell"
                                             Height="24"
                                             Width="24" />

                                </md:Badged>
                            </Button>


                        </StackPanel>-->

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Column="1">
              <Button Style="{StaticResource MaterialDesignFlatButton}"
                      ToolTip="Register New Student"
                      Padding="4 2">
                <md:PackIcon Kind="AccountPlus" Height="24" Width="24"/>
              </Button>
              <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                Click="Button_OnClick"
                                Margin="5">
                <Path Data="M15.45202,0.29899979L20.934988,0.29899979 23.327017,2.8909988 29.209032,9.1710014 31.601,11.763 31.601,28.709999C31.601,30.504997,30.106005,32,28.312,32L9.6700403,32C7.8760344,32,6.3800021,30.504997,6.3800021,28.709999L6.3800021,24.223999 8.9720422,20.735001 8.9720422,28.611C8.9720422,29.009003,9.2709924,29.307999,9.6700403,29.307999L28.312,29.307999C28.710987,29.307999,29.009998,29.009003,29.009998,28.611L29.009998,12.361 24.025015,12.361C19.739006,12.66,19.639031,8.8720016,19.639031,8.8720016L19.639031,2.9910011 15.351983,2.9910011C15.45202,2.7910004,15.45202,2.4920006,15.45202,2.2929993L15.45202,0.89699936z M9.6700403,0L9.7700149,0 12.56103,0C13.059015,0,13.558039,0.39899826,13.558039,0.89699936L13.558039,2.2929993C13.558039,2.7910004,13.158991,3.1899986,12.56103,3.1899986L10.666988,3.1899986C9.8690139,3.1899986 8.3740197,3.5890007 7.9750329,5.980999 7.5770232,8.0750008 7.9750329,14.454998 7.9750329,14.454998L11.364986,14.454998 5.7820407,21.533001 0,14.454998 3.5889877,14.454998 3.7880229,5.980999C3.7880231,5.980999,3.4890121,0.79700089,9.6700403,0z"
                                  Stretch="Uniform" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},Path=Foreground}" Width="20" Height="20" Margin="0,0,0,0"
                                  RenderTransformOrigin="0.5,0.5">
                  <Path.RenderTransform>
                    <TransformGroup>
                      <TransformGroup.Children>
                        <RotateTransform Angle="0" />
                        <ScaleTransform ScaleX="1" ScaleY="1" />
                      </TransformGroup.Children>
                    </TransformGroup>
                  </Path.RenderTransform>
                </Path>
              </Button>
            </StackPanel>
          </Grid>

          <!--Login toolbar-->
          <UniformGrid Columns="1" HorizontalAlignment="Right"
                                 Grid.Column="1">
            <!--<Button Content="CANCEL"
                                Click="ExitClicked"
                                VerticalAlignment="Bottom"
                                Margin="10 10 5 10" 
                                />-->

            <Button Content="LOGIN"
                                x:Name="LoginButton"
                                Click="LoginClicked"
                                VerticalAlignment="Bottom"
                                Margin="5 10 10 10" />
          </UniformGrid>

          <!--Encoder Toolbar-->
          <Grid>
            <Button x:Name="LogoutButton"
                            HorizontalAlignment="Left"
                            Click="LogoutButton_OnClick"
                                Grid.Column="1"
                                ToolTip="Logout"
                                VerticalAlignment="Bottom"
                                Margin="10" >
              <StackPanel Orientation="Horizontal">
                <md:PackIcon Kind="Logout"
                                         Height="24"
                                         Width="24"
                                         VerticalAlignment="Center"/>
                <TextBlock Text=" LOGOUT"
                                       VerticalAlignment="Center"/>
              </StackPanel>
            </Button>
            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                Click="Button_OnClick"
                    HorizontalAlignment="Right"
                                Margin="5">
              <Path Data="M15.45202,0.29899979L20.934988,0.29899979 23.327017,2.8909988 29.209032,9.1710014 31.601,11.763 31.601,28.709999C31.601,30.504997,30.106005,32,28.312,32L9.6700403,32C7.8760344,32,6.3800021,30.504997,6.3800021,28.709999L6.3800021,24.223999 8.9720422,20.735001 8.9720422,28.611C8.9720422,29.009003,9.2709924,29.307999,9.6700403,29.307999L28.312,29.307999C28.710987,29.307999,29.009998,29.009003,29.009998,28.611L29.009998,12.361 24.025015,12.361C19.739006,12.66,19.639031,8.8720016,19.639031,8.8720016L19.639031,2.9910011 15.351983,2.9910011C15.45202,2.7910004,15.45202,2.4920006,15.45202,2.2929993L15.45202,0.89699936z M9.6700403,0L9.7700149,0 12.56103,0C13.059015,0,13.558039,0.39899826,13.558039,0.89699936L13.558039,2.2929993C13.558039,2.7910004,13.158991,3.1899986,12.56103,3.1899986L10.666988,3.1899986C9.8690139,3.1899986 8.3740197,3.5890007 7.9750329,5.980999 7.5770232,8.0750008 7.9750329,14.454998 7.9750329,14.454998L11.364986,14.454998 5.7820407,21.533001 0,14.454998 3.5889877,14.454998 3.7880229,5.980999C3.7880231,5.980999,3.4890121,0.79700089,9.6700403,0z"
                                  Stretch="Uniform" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},Path=Foreground}" Width="20" Height="20" Margin="0,0,0,0"
                                  RenderTransformOrigin="0.5,0.5">
                <Path.RenderTransform>
                  <TransformGroup>
                    <TransformGroup.Children>
                      <RotateTransform Angle="0" />
                      <ScaleTransform ScaleX="1" ScaleY="1" />
                    </TransformGroup.Children>
                  </TransformGroup>
                </Path.RenderTransform>
              </Path>
            </Button>
          </Grid>

          <!--Work toolbar-->
          <Grid Margin="10 0" x:Name="WorkToolbar">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center">
              <Button Style="{StaticResource MaterialDesignToolButton}"
                                    Click="AcceptSelected"
                                    Padding="5 0">
                <StackPanel VerticalAlignment="Center">
                  <md:PackIcon Kind="CheckCircle"
                                             Height="24"
                                             Width="24"
                                             HorizontalAlignment="Center"
                                             Foreground="{StaticResource PrimaryHueDarkBrush}" />
                  <TextBlock Text="Accept" FontSize="6pt" />
                </StackPanel>
              </Button>
              <Button Padding="5 0"
                                    Click="CloseScheduleClicked"
                                    Style="{StaticResource MaterialDesignToolButton}">
                <StackPanel VerticalAlignment="Center">
                  <md:PackIcon Kind="CloseCircle" Height="24"
                                             Width="24"
                                             HorizontalAlignment="Center"
                                             Foreground="{StaticResource SecondaryAccentBrush}" />
                  <TextBlock Text="Closed" FontSize="6pt" />
                </StackPanel>
              </Button>
              <Button Style="{StaticResource MaterialDesignToolButton}" Padding="5 0"
                                    Click="ConflictScheduleClicked">
                <StackPanel VerticalAlignment="Center">
                  <md:PackIcon Kind="AlertCircle" Height="24"
                                             Width="24"
                                             HorizontalAlignment="Center" />
                  <TextBlock Text="Conflict" FontSize="6pt" />
                </StackPanel>
              </Button>
            </StackPanel>

            <Button Click="SubmitButton_OnClick"
                                x:Name="SubmitButton"
                                Grid.Column="1"
                                Content="SUBMIT"
                                VerticalAlignment="Center" />
          </Grid>

          <!-- Message -->
          <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <md:PackIcon Kind="Alert" Height="24" Width="24" Margin="10 0"/>
            <TextBlock Text="" x:Name="Message" TextWrapping="Wrap" FontSize="14pt" VerticalAlignment="Center"/>
          </StackPanel>
          
        </md:Transitioner>

      </Grid>
        </md:ColorZone>

    <md:Transitioner Grid.Row="0" x:Name="Content" SelectedIndex="0">
      <md:Transitioner.ItemContainerStyle>
        <Style TargetType="{x:Type md:TransitionerSlide}">
          <Setter Property="BackwardWipe">
            <Setter.Value>
              <md:FadeWipe/>
            </Setter.Value>
          </Setter>
          <Setter Property="ForwardWipe">
            <Setter.Value>
              <md:FadeWipe/>
            </Setter.Value>
          </Setter>
        </Style>
      </md:Transitioner.ItemContainerStyle>
      <!-- LOGIN VIEW -->
      <Border   x:Name="Genie"
                Grid.Row="0"
                Margin="0 0 0 0">
        <Grid >
          <Grid x:Name="LoginView">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="*"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="4 4 0 0"
                                Background="{StaticResource PrimaryHueDarkBrush}">
              <StackPanel VerticalAlignment="Top"
                          Orientation="Horizontal"
                          HorizontalAlignment="Left">
                <Image Source="norsu_74.png"
                        Margin="7"
                        Height="48" Width="48"/>
                <TextBlock Text="Please Login" 
                            Foreground="White"
                            VerticalAlignment="Center"
                            Margin="20 0 0 0"
                            TextAlignment="Center"
                            Style="{StaticResource MaterialDesignTitleTextBlock}"/>
              </StackPanel>
            </Border>
            <StackPanel Background="White"
                                    Grid.Row="1">
              <ProgressBar x:Name="LoginProgress"
                                     IsIndeterminate="False"/>
              <TextBox Margin="20"
                                     x:Name="Username"
                                     TextChanged="Username_OnTextChanged"
                                     md:HintAssist.Hint="USERNAME"/>
              <PasswordBox
                                PasswordChanged="Password_OnPasswordChanged"
                                Margin="20"
                                x:Name="Password"
                                md:HintAssist.Hint="PASSWORD" />
            </StackPanel>
          </Grid>
        </Grid>
      </Border>

      <!-- ENCODER INFO VIEW -->
      <md:ColorZone 
                VerticalAlignment="Bottom"
                x:Name="EncoderGenie"
                Grid.Row="0"
                CornerRadius="4 4 0 0"
                Mode="PrimaryDark"
                Margin="0 0 0 0">
        <Grid >
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          <StackPanel Orientation="Horizontal">
            <Border Height="48" Width="48"
                    Margin="20 10 10 10">
              <Border.OpacityMask>
                <VisualBrush>
                  <VisualBrush.Visual>
                    <Ellipse Height="7" Width="7" Fill="Red"/>
                  </VisualBrush.Visual>
                </VisualBrush>
              </Border.OpacityMask>
              <Image Source="{Binding Encoder.Picture,Converter={converters:BytesToImage}}"
                   Height="48" Width="48"
                   Stretch="UniformToFill"/>
            </Border>
            <StackPanel VerticalAlignment="Center"
                            Margin="10">
              <TextBlock Text="{Binding Encoder.Username}" Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                               />
              <TextBlock Text="{Binding Encoder.FullName}" Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                               />
            </StackPanel>
          </StackPanel>
          <StackPanel Grid.Row="1" Margin="5">
            <md:ColorZone Margin="5" ToolTip="Number of students processed.">
              <StackPanel Orientation="Horizontal">
                <md:PackIcon Kind="AccountMultipleOutline"
                                     VerticalAlignment="Center"
                                         HorizontalAlignment="Center"
                                     Height="32" Width="32"
                                     Margin="5" />
                <Rectangle Width="1" Fill="{StaticResource MaterialDesignDivider}"/>
                <TextBlock Text="{Binding Encoder.WorkCount,StringFormat={}#\,##0}" FontSize="20pt" HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                       Margin="10 0"
                               FontWeight="Bold"/>

              </StackPanel>
            </md:ColorZone>
            <md:ColorZone Margin="5" ToolTip="Rate of encoding. Students per hour." >
              <StackPanel Orientation="Horizontal">
                <md:PackIcon Kind="Speedometer"
                                     Height="32" Width="32"
                                         HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Margin="5"/>
                <Rectangle Width="1" Fill="{StaticResource MaterialDesignDivider}" />
                <TextBlock FontSize="20pt" HorizontalAlignment="Right"
                                       Margin="10 0"
                                       VerticalAlignment="Center"
                               FontWeight="Bold">
                                <Run Text="{Binding Encoder.Rate,StringFormat={}#\,##0.##}"/><Run Text="/HR"/>
                </TextBlock>

              </StackPanel>
            </md:ColorZone>
          </StackPanel>

        </Grid>
      </md:ColorZone>

      <!-- WORK VIEW -->
      <Border x:Name="WorkGenie"
                    Grid.Row="0"
                Background="White"
                BorderThickness="0 0 0 1"
                BorderBrush="{StaticResource PrimaryHueDarkBrush}"
                CornerRadius="4 4 0 0"
                  Margin="0 0 0 0">

        <Grid >
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <Border CornerRadius="4 4 0 0"
                                Background="{StaticResource PrimaryHueDarkBrush}">
            <StackPanel VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left">
              <Image Source="norsu_74.png"
                                   Margin="7"
                                   Height="48" Width="48"/>
              <StackPanel VerticalAlignment="Center">
                <TextBlock Text="STUDENT ID" 
                                       x:Name="StudentId"
                                           Foreground="White"
                                           Style="{StaticResource MaterialDesignTitleTextBlock}"/>
                <TextBlock Text="Student Name"
                                       x:Name="StudentName"
                                       Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                                       Foreground="White"/>
              </StackPanel>
            </StackPanel>
          </Border>

          <ListBox Grid.Row="1" Grid.IsSharedSizeScope="True"
                         SelectionMode="Extended"
                         HorizontalContentAlignment="Stretch"
                          x:Name="WorkDataGrid">
            <ListBox.ItemContainerStyle>
              <Style BasedOn="{StaticResource MaterialDesignListBoxItem}"
                               TargetType="ListBoxItem">
                <Setter Property="IsSelected" Value="{Binding IsSelected,Mode=TwoWay}"/>
              </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
              <DataTemplate>
                <Grid HorizontalAlignment="Stretch">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                  </Grid.ColumnDefinitions>
                  <CheckBox IsChecked="{Binding IsSelected}"
                                          VerticalAlignment="Center"
                                          Margin="5"/>
                  <TextBlock Grid.Column="1"
                                           VerticalAlignment="Center"
                                           Margin="5">
                                    <Run FontWeight="Bold" Text="{Binding SubjectCode}" />
                                    [ <Run Text="{Binding Schedule}" /> ]
                  </TextBlock>
                  <Button Grid.Column="2"
                                        Padding="0"
                                        Style="{StaticResource MaterialDesignToolButton}"
                                        Command="{Binding ToggleStatusCommand}">
                    <md:PackIcon Height="24"
                                             Width="24"
                                             Margin="5 0"
                                             Foreground="{Binding EnrollmentStatus, Converter={converters:ScheduleStatusToBrushConverter
                                                {StaticResource PrimaryHueDarkBrush}, 
                                                {StaticResource SecondaryAccentBrush}, 
                                                {StaticResource MaterialDesignLightForeground}}}"
                                             Kind="{Binding EnrollmentStatus, Converter={converters:ScheduleStatusConverter}}" />
                  </Button>
                </Grid>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
          <ProgressBar x:Name="SubmitProgress" Grid.Row="1"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             IsIndeterminate="True"
                             Visibility="Collapsed"
                             Height="64"
                             Width="64"
                             Style="{StaticResource MaterialDesignCircularProgressBar}"/>
        </Grid>
      </Border>
      
      <Grid/>
    </md:Transitioner>
      
     
    </Grid>
</Window>